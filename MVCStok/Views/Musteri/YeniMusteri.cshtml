@model MVCStok.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Müşteri Adı:</label>
        @*<input type="text" class="form-control" name="MUSTERIAD"/>*@
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:blue" })
    </div> 
    <div>
        <label>Müşteri Soyadı:</label>
        <input type="text" class="form-control" name="MUSTERISOYAD"/>
    </div>   
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btnEkle">Müşteri Ekle</button>
    </div>
    <script>
        $('#btnEkle').click(function () {
            alert('Müşteri Başarıyla Eklendi');
        });
    </script>
</form>
